                                        {
                                            <div class="tire-actions">
                                                @foreach (var url in tire.ProductUrls.Take(3))
                                                {
                                                    <a href="@url" target="_blank" class="btn-product">
                                                        √úr√ºn√º G√∂r√ºnt√ºle
